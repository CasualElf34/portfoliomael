/* Animation pour faire tourner l'image dans la carte Formation */
#artist-button-2 img {
  animation: spin 4s linear infinite;
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}




/* Animation pour faire tourner l'image dans la carte Formation */
#artist-button-2 img {
  transition: transform 0.6s ease-in-out;
}

#artist-button-2:hover img {
  transform: rotate(360deg);
}

